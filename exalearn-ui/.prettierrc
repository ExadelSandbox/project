{
    "printWidth": 120,
    "singleQuote": true,
    "endOfLine": "auto",
    "trailingComma": "none",
    "arrowParens": "always",
    "jsxBracketSameLine": true,
    "useTabs": true,
    "tabWidth": 2,
    "semi": true,


    "overrides": [
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        }
    ]
}
