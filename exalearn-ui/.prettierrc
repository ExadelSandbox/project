{
	"printWidth": 120,
	"singleQuote": true,
	"endOfLine": "auto",
	"trailingComma": "none",
	"arrowParens": "always",
	"jsxBracketSameLine": true,
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"quoteProps": "preserve",

	"overrides": [
		{
			"files": "*.component.html",
			"options": {
				"parser": "angular"
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html"
			}
		}
	]
}
